<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Relationship</th>
      <th>Year</th>
      <th>Place</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to "#{post.name}", "posts/write/#{post.id}" %></td>
        <td><%= post.title %></td>
        <td><%= post.relationship %></td>
        <td><%= post.year %></td>
        <td><%= post.place %></td>
        <td><%= post.message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
